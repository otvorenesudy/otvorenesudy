<ul class="nav m-t-3 m-b-1">
  <% if controller_name != 'sessions' %>
    <li class="nav-item"><%= link_to t('.sign_in'), new_session_path(resource_name), class: 'nav-link' %></li>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li class="nav-item"><%= link_to t('.sign_up'), new_registration_path(resource_name), class: 'nav-link' %></li>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <li class="nav-item"><%= link_to t('.forgotten_password'), new_password_path(resource_name), class: 'nav-link' %></li>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li class="nav-item"><%= link_to t('.account_confirmation'), new_confirmation_path(resource_name), class: 'nav-link' %></li>
  <% end %>
</ul>
