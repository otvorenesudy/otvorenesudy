<nav class="nav flex-column align-items-start border">
  <% if controller_name != 'sessions' %>
    <%= link_to t('.sign_in'), new_session_path(resource_name), class: 'nav-link' %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('.sign_up'), new_registration_path(resource_name), class: 'nav-link' %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to t('.forgotten_password'), new_password_path(resource_name), class: 'nav-link' %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('.account_confirmation'), new_confirmation_path(resource_name), class: 'nav-link' %>
  <% end %>
</nav>
