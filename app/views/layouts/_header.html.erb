<header class="container mt-3 px-sm-0">
  <nav class="nav align-items-center mb-3">
    <%= link_to brand_tag('otvorene-sudy', width: 170, height: 60), root_path, class: 'navbar-brand mr-auto' %>

    <div class="nav nav-secondary align-items-center align-self-stretch font-weight-bold text-uppercase small border-right mr-4 pr-4">
      <%= link_to t('.slovak'), { l: :sk }, class: 'nav-link' %>
      <%= link_to t('.english'), { l: :en }, class: 'nav-link' %>
    </div>

    <%= link_to brand_tag('transparency-international-slovensko', width: 158.33, height: 38), 'https://transparency.sk', class: 'tis mr-4' %>
    <%= link_to t('.donate'), donation_url, class: 'btn btn-primary btn-lg', role: :button, target: '_blank' %>
  </nav>

  <nav class="navbar nav-primary navbar-expand-xl font-weight-bold text-uppercase border-bottom">
    <%= button_tag '&#9776;'.html_safe, class: 'navbar-toggler', data: { toggle: 'collapse', target: '#navbar' }, name: nil, type: 'button' %>

    <div id="navbar" class="navbar-collapse collapse">
      <div class="navbar-nav justify-content-between border-top py-2">
        <%= bar_link_to t('.courts'), courts_path, class: 'mx-0' %>
        <%= bar_link_to t('.judges'), judges_path, class: 'mx-0' %>
        <%= bar_link_to t('.hearings'), hearings_path, class: 'mx-0' %>
        <%= bar_link_to t('.decrees'), decrees_path, class: 'mx-0' %>
        <%= bar_link_to t('.proceedings'), proceedings_path, class: 'mx-0' %>
        <%= bar_link_to t('.selections'), selections_path, class: 'mx-0' %>
        <%= bar_link_to t('.families'), 'http://sudy.transparency.sk', class: 'mx-0', target: '_blank' %>
        <%= bar_link_to t('.prosecutors'), 'https://prokuratori.otvorenesudy.sk', class: 'mx-0', target: '_blank' %>
      </div>
    </div>
  </nav>
</header>
