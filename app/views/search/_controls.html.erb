<div class="row">
  <div class="col-xs-6">
    <%= form_tag search_path, method: :get do %>
      <div class="input-group">
        <%= search_field_tag @facets[:q].name, params[@facets[:q].name], class: 'form-control', placeholder: t(@facets[:q].key)[:placeholder] %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-outline-secondary"><%= icon_tag 'search-strong' %></button>
        </span>
      </div>

      <% if @facets[:q].active? %>
        <%= icon_link_to :remove, nil, search_path(@facets[:q].params.except @facets[:q].name), class: 'remove muted' %>
      <% end %>

      <% search_form_params @facets.params.except :q do |name, value| %>
        <%= hidden_field_tag name, value %>
      <% end %>
    <% end %>
  </div>

  <div class="col-xs-6">
    <div class="pull-xs-right">
      <div class="btn-group">
        <%= link_to icon_tag('arrow-up'), search_path(params.merge order: :asc), class: "btn btn-outline-secondary#{' active' if @facets.params[:order] == :asc}" %>
        <%= link_to icon_tag('arrow-down'), search_path(params.merge order: :desc), class: "btn btn-outline-secondary#{' active' if @facets.params[:order] == :desc}" %>
      </div>

      <%= form_tag search_path, method: :get, class: 'form-inline' do %>
        <div class="form-group">
          <%= select_tag :sort, options_for_select(@sort_fields.map { |value| [t(".sort.#{@model.to_s.underscore}.#{value.to_s.gsub(/\A_/, '')}"), value] }, @facets.params[:sort]), class: 'custom-select' %>
        </div>

        <% search_form_params @facets.params.except :sort do |name, value| %>
          <%= hidden_field_tag name, value %>
        <% end %>
      <% end %>

    </div>

  </div>
</div>

<div class="row">
  <div class="col-xs-6">
    <%= render 'search/subscribe' if @model.respond_to? :subscribe %>
    <%= link_to t('.reset'), search_path, class: 'btn btn-outline-secondary' unless @facets.query_params.empty? %>
  </div>

  <div class="col-xs-6">
    <%= render 'search/details' %>
  </div>
</div>

