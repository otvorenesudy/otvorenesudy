<h2 class="m-t-2 m-b-0">
  <%= t "judges.#{prefix}_hearings.headline" %>
</h2>

<% if hearings.any? %>
  <%= render 'hearings/search/results', results: hearings, offset: 0 %>
  <%= link_to_hearings_search t("judges.#{prefix}_hearings.more"), params: query, class: 'btn btn-outline-secondary m-t-1'  %>
<% else %>
  <p class="m-t-1">
    <%= t "judges.#{prefix}_hearings.none" %>
  </p>
<% end %>
